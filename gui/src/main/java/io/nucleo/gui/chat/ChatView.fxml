<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<HBox fx:id="root" prefHeight="800" prefWidth="800" spacing="10.0" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.nucleo.gui.chat.ChatController">
    <children>
        <VBox spacing="10.0">
            <children>
                <Label text="Chat"/>
                <TextArea fx:id="textArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS"/>
                <HBox spacing="10.0">
                    <children>
                        <TextField fx:id="inputTextField" HBox.hgrow="ALWAYS"/>
                        <Button fx:id="sendButton" onAction="#send" text="Send" HBox.hgrow="NEVER"/>
                    </children>
                </HBox>
                <Label fx:id="statusLabel"/>
                <HBox>
                    <children>
                        <Label text="Address: ">
                            <padding>
                                <Insets top="5.0"/>
                            </padding>
                        </Label>
                        <TextField fx:id="addressTextField" editable="false" HBox.hgrow="ALWAYS"/>
                    </children>
                </HBox>

            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </VBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</HBox>
